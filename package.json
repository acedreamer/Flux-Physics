{
  "name": "flux-physics-playground",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Interactive physics playground with audio reactive particle system",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:rust": "cd engine && cargo test",
    "test:all": "npm run test:rust && npm run test",
    "demo": "vite --open demos/flux/flux-audio-module-demo.html"
  },
  "keywords": ["physics", "particles", "audio-reactive", "webassembly", "pixi.js"],
  "devDependencies": {
    "vite": "^5.0.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.0.0",
    "canvas": "^2.11.0"
  },
  "dependencies": {
    "@pixi/filter-advanced-bloom": "^5.1.1",
    "pixi.js": "^8.11.0",
    "engine": "file:./engine/pkg"
  }
}